{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "model": "litellm/vertex_ai/claude-sonnet-4-5",
  "small_model": "litellm/vertex_ai/claude-haiku-4-5",
  "disabled_providers": [
    "amazon-bedrock",
    "cloudflare-workers-ai",
    "github-copilot",
    "github-copilot-enterprise",
    "github-models",
    "opencode"
  ],
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "allow",
      "terraform *": "deny",
      "git push": "ask",
      "rm *": "ask",
      "rm -rf *": "ask",
      "dd *": "deny",
      "chmod 777 *": "deny",
      "chown *": "deny",
      "mkfs *": "deny",
      "fdisk *": "deny",
      "apt-get remove *": "deny",
      "apt-get purge *": "deny",
      "yum remove *": "deny",
      "dnf remove *": "deny",
      "killall *": "deny",
      "pkill -9 *": "deny"
    },
    "webfetch": "ask"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "agent": {
    "plan": {
      "model": "litellm/vertex_ai/claude-opus-4-5"
    },
    "build": {
      "model": "litellm/openai/gpt-5.2"
    },
    "general": {
      "model": "litellm/vertex_ai/claude-sonnet-4-5"
    },
    "explore": {
      "model": "litellm/vertex_ai/claude-haiku-4-5"
    }
  },
  "provider": {
    "litellm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LiteLLM (Vertex)",
      "options": {
        "apiKey": "{env:VG_LITELLM_API_KEY}",
        "baseURL": "{env:VG_LITELLM_API_BASE}",
        "timeout": 600000
      },
      "models": {
        "vertex_ai/gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash (VertexAI)",
          "release_date": "2025-06-17",
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "tool_call": true,
          "cost": {
            "input": 0.3,
            "output": 2.5,
            "cache_read": 0.075,
            "cache_write": 0.383
          },
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": ["text", "image", "audio", "video", "pdf"],
            "output": ["text"]
          }
        },
        "vertex_ai/gemini-2.5-pro": {
